extends ../layouts/main.pug
block stylesheet
  link(rel="stylesheet",href="/css/forms.css")
block content
  main
    form.login-form(action="/login",method="POST")
      if showMessage
        if (!status)
          .message.error
            h3.error username/password incorrect
        script. 
          setTimeout(()=>{
            document.querySelector(".product-form .message").style.display='none';
          },5000)
      div.form-control.login
        label(for="email") Email
        input(type="email" ,name="email", id="email")
        label(for="password") Password
        input(type="email" ,name="email", id="email")
        button.btn(type="submit") Login 
        h3.signLink Don't have an Account? 
          span.sign SignUp 
          | Here !
  
    form.signUp-form(action="/signup",method="POST")
      div.form-control.signup
        label(for="email") Email 
        input(type="email" ,name="email", id="email")
        label(for="password") Password
        input(type="password" ,name="pass", id="pass")
        label(for="cpwd") Confirm Password
        input(type="password" ,name="cpwd", id="cpwd")
        button.btn(type="submit") Sign Up
        h3.loginLink Already have an Account? 
          span.sign Login 
          | Here !
  script(src='/javascript/auth.js')